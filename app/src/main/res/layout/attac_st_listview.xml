<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9C9393"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/era"
        android:layout_width="fill_parent"

        android:layout_height="fill_parent"
        android:divider="@drawable/divider"
        android:minHeight="70dp"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:showDividers="middle|beginning|end">

        <TextView
            android:id="@+id/cur_num"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textSize="20sp" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:dividerPadding="12dip"
            android:showDividers="middle|beginning|end">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/hit_modifier"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:foregroundGravity="center|right"
                    android:gravity="right"
                    android:text="+10"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center"
            android:paddingStart="10dp"
            android:weightSum="3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/attack_num1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1"
                    android:textAlignment="gravity"
                    app:autoSizeMinTextSize="14dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingRight="1dp"
                    android:paddingBottom="4dp"
                    android:text="x"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/d3" />

                <TextView
                    android:id="@+id/bonus1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1"
                    android:textAlignment="gravity"
                    app:autoSizeMinTextSize="14dp" />
            </TableRow>

            <TableRow
                android:id="@+id/table2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/attack_num2"
                    android:layout_height="match_parent"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1"
                    android:textAlignment="gravity"
                    app:autoSizeMinTextSize="14dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingRight="1dp"
                    android:paddingBottom="4dp"
                    android:text="x"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/d10" />

                <TextView
                    android:id="@+id/bonus2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1"
                    android:textAlignment="gravity"
                    app:autoSizeMinTextSize="14dp" />
            </TableRow>

            <TableRow
                android:id="@+id/table3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/attack_num3"
                    android:layout_height="match_parent"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1"
                    android:textAlignment="gravity"
                    app:autoSizeMinTextSize="14dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"

                    android:paddingRight="1dp"
                    android:paddingBottom="4dp"
                    android:text="x"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/d10" />

                <TextView
                    android:id="@+id/bonus3"
                    android:layout_height="match_parent"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1"
                    android:textAlignment="gravity"
                    app:autoSizeMinTextSize="14dp" />

            </TableRow>
        </TableLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Delbut"
                android:layout_width="44dp"
                android:layout_height="50dp"


                android:layout_marginEnd="10dp"

                android:background="@null"
                android:backgroundTint="#D16868"

                android:focusable="false"

                android:isScrollContainer="false"
                android:textColor="#FFFFFF"


                android:textColorHint="#FFFFFF"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="#FFFFFF" />

            <TextView
                android:id="@+id/attack_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Delbut"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </TableRow>

</LinearLayout>