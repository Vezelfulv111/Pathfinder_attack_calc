<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#656060"
    android:baselineAligned="false"
    android:gravity="center|center_horizontal"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <TableRow
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="#DF8F8F"
            android:divider="#2C2C2C"
            android:showDividers="middle">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text="N" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:paddingStart="5dp"
                android:text="Attack roll" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingStart="5dp"
                android:text="Damage rolls" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="40dp"
                android:layout_height="match_parent"

                android:layout_gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:text="Sneak"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="40dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="Total " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:divider="#2C2C2C"
            android:showDividers="middle">

            <TextView
                android:id="@+id/current_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="fill"
                android:paddingLeft="3dp"
                android:paddingEnd="3dp"
                android:text="N"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/attack_name_gen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:paddingEnd="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="54dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center|end"
                            android:layout_weight="0"
                            android:src="@drawable/d20" />

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:paddingLeft="0dp">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end">

                                <TextView
                                    android:id="@+id/d20_kinuli"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start|top|center_vertical"
                                    android:text="___"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/hit_modifier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start|top|center_vertical"
                                    android:text=" __"
                                    android:textSize="16sp" />
                            </TableRow>

                        </TableRow>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/equal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="="
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/d20throw"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="0"
                        android:textSize="20sp" />

                </TableRow>
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/attack_num1"
                            android:layout_width="20dp"

                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="1"
                            android:textAlignment="gravity"
                            android:textSize="12sp"
                            app:autoSizeMinTextSize="20dp" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingBottom="4dp"
                            android:text="x"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:src="@drawable/d6" />

                        <TextView
                            android:id="@+id/bonus1"

                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0"
                            android:textAlignment="gravity"
                            app:autoSizeMinTextSize="14dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="="
                            android:textSize="24sp" />

                        <TableRow
                            android:layout_width="30dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/answer1"

                                android:layout_width="match_parent"


                                android:layout_height="match_parent"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="0"
                                android:textAlignment="gravity"
                                android:textSize="14sp" />
                        </TableRow>

                    </TableRow>

                    <TableRow
                        android:id="@+id/table2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="2dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/attack_num2"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="1"
                            android:textAlignment="gravity"
                            app:autoSizeMinTextSize="20dp" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingBottom="4dp"
                            android:text="x"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:src="@drawable/d10" />

                        <TextView
                            android:id="@+id/bonus2"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0"
                            android:textAlignment="gravity"
                            app:autoSizeMinTextSize="14dp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="="
                            android:textSize="24sp" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/answer2"

                                android:layout_width="match_parent"


                                android:layout_height="match_parent"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="0"
                                android:textAlignment="gravity"
                                android:textSize="14sp" />
                        </TableRow>

                    </TableRow>

                    <TableRow
                        android:id="@+id/table3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/attack_num3"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="1"
                            android:textAlignment="gravity" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingBottom="4dp"
                            android:text="x"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:src="@drawable/d10" />

                        <TextView
                            android:id="@+id/bonus3"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0"
                            android:textAlignment="gravity"
                            app:autoSizeMinTextSize="14dp" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="="
                            android:textSize="24sp" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/answer3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="0"
                                android:textAlignment="gravity"
                                android:textSize="14sp" />
                        </TableRow>

                    </TableRow>
                </TableLayout>

            </TableRow>

            <TableRow
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/sneakky"


                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/total_result"


                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textSize="20sp" />
            </TableRow>

        </TableRow>
    </TableLayout>

</LinearLayout>