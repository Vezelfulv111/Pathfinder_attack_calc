<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#656060"
    android:baselineAligned="false"
    android:gravity="center|center_horizontal"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/generate_header"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@color/tealHeader"
            android:divider="#2C2C2C"
            android:showDividers="middle">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text="N" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:paddingStart="5dp"
                android:text="Attack roll" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:text="Damage rolls" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:text="Sneak"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Total " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#2C2C2C"
            android:showDividers="middle">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tmp_current_number1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7" />

                <TextView
                    android:id="@+id/current_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="10"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="N" />
                <TextView
                    android:id="@+id/tmp_current_number2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="13"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/attack_name_gen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:paddingStart="5dp"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_gravity="center|end"
                            android:src="@drawable/d20" />

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:paddingLeft="0dp">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end">

                                <TextView
                                    android:id="@+id/d20_kinuli"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start|top|center_vertical"
                                    android:text="___"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/hit_modifier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start|top|center_vertical"
                                    android:text=" __"
                                    android:textSize="16sp" />
                            </TableRow>

                        </TableRow>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tm1_equal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4" />

                        <TextView
                            android:id="@+id/equal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="10"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="="
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tm2_equal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tm1_d20throw"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4" />

                        <TextView
                            android:id="@+id/d20throw"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="10"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="0"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/tm2_d20throw"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:paddingEnd="3dp">

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/attack_num1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="13"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="1 x"
                            android:textAlignment="gravity"
                            app:autoSizeMinTextSize="20dp" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="18">


                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal|center_vertical"
                                android:src="@drawable/d6"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/bonus1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="13"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0 ="
                            android:textAlignment="gravity" />

                        <TextView
                            android:id="@+id/answer1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="15"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0"
                            android:textAlignment="gravity" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/table2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="2dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/attack_num2"
                            android:layout_width="0dp"

                            android:layout_height="match_parent"
                            android:layout_weight="13"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="1 x"
                            android:textAlignment="gravity"
                            app:autoSizeMinTextSize="20dp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="18">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal|center_vertical"
                                android:src="@drawable/d10"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/bonus2"
                            android:layout_width="0dp"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="13"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0 ="
                            android:textAlignment="gravity"
                            app:autoSizeMinTextSize="14dp" />

                        <TextView
                            android:id="@+id/answer2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="15"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0"
                            android:textAlignment="gravity" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/table3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/attack_num3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="13"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="1 x"
                            android:textAlignment="gravity" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="18">

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal|center_vertical"
                                android:src="@drawable/d10"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/bonus3"
                            android:layout_width="0dp"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="13"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0 ="
                            android:textAlignment="gravity"

                            app:autoSizeMinTextSize="14dp" />

                        <TextView
                            android:id="@+id/answer3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="15"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="0"
                            android:textAlignment="gravity" />

                    </TableRow>
                </TableLayout>

            </TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tmp1_sneakky"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/sneakky"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAlignment="gravity"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tmp2_sneakky"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tmp1_total_result"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/total_result"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tmp2_total_result"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:maxLines="1" />
            </LinearLayout>

        </TableRow>
    </TableLayout>

</LinearLayout>